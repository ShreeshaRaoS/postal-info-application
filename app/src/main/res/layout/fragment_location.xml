<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LOCATION">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <ImageView
                            android:id="@+id/rd"
                            android:layout_width="127dp"
                            android:layout_height="74dp"
                            android:src="@drawable/rd"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/RD"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Recurring Deposit"
                            android:textSize="14dp"
                            android:layout_marginTop="05dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/td1"
                            android:layout_width="127dp"
                            android:layout_height="74dp"
                            android:src="@drawable/td"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/td"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Time Deposit"
                            android:textSize="14dp"
                            android:layout_marginTop="5dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/mis1"
                            android:layout_width="127dp"
                            android:layout_height="60dp"
                            android:src="@drawable/mis"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@+id/mis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Monthly Interest Scheme"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp"  />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/ssy1"
                            android:layout_width="127dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ssy"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@+id/ssy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Sukanya Samriddhi Yojana"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/nsc1"
                            android:layout_width="127dp"
                            android:layout_height="60dp"
                            android:src="@drawable/nsc"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@+id/nsc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="National Savings Certificate"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/scss1"
                            android:layout_width="127dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center"
                            android:src="@drawable/scss" />

                        <TextView
                            android:id="@+id/scss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Senior Citizen Savings Scheme"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="90dp">


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/custom_edittext"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <ImageView
                            android:id="@+id/ppf1"
                            android:layout_width="127dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ppf"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/ppf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Public Provident Fund"
                            android:textSize="14dp"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>


